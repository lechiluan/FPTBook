@model FPTBook.Models.Account


@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (ViewBag.Success != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Success");
        window.location = '/';
    };
    </script>
}

<section >
    <div class="form-container">
        <div class="image-holder"></div>

        @using (Html.BeginForm("ChangePassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <h2 align="center"><b>Change Password</b></h2>
            <hr/>
            
            <div class="form-group">
                @Html.LabelFor(m => m.CurrentPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.CurrentPassword, new { @class = "form-control", @placeholder = "Current Password", @required = "" })
                    @Html.ValidationMessageFor(m => m.CurrentPassword, "", new { @class = "text-danger" })
                    @if (ViewBag.Error != null){
                        <p class="text-danger">@ViewBag.Error</p>                
                     }
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", @placeholder = "New Password", @required = "" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                    @if (ViewBag.Error != null){
                        <p class="text-danger">@ViewBag.Error</p>                
                     }
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmNewPassword, new { @class = "col-md-5 control-label" })
                <div class="col-md-7">
                    @Html.PasswordFor(m => m.ConfirmNewPassword, new { @class = "form-control", @placeholder = "Confirm New Password", @required = "" })
                    @Html.ValidationMessageFor(m => m.ConfirmNewPassword, "", new { @class = "text-danger" })
                    @if (ViewBag.Error != null){
                        <p class="text-danger">@ViewBag.Error</p>                
                     }
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5 col-md-7">
                    <input class="btn btn-primary" type="submit" value="Update Password" />
                    <a class="btn btn-primary" role="button" href="@Url.Action("UpdateAccount", "Account")">Cancel</a>
                </div>
            </div>
        }
    </div>
</section>