@model FPTBook.Models.Book

@{
    ViewBag.Title = @Model.BookName;
}

@if (ViewBag.Success != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.Success");
    };
    </script>
}

@if (ViewBag.LoginCart != null)
{
    <script type="text/javascript">
    window.onload = function () {
        alert("@ViewBag.LoginCart");
        window.location = "/Account/SignIn";
    };
    </script>
}
<div class="container">
    <h1><u><b>Book Detail</b></u></h1>
    <br />
</div>
<div class="container">
    <div class="col-md-6">
        <img src="~/Image/@Model.Image" style="width:100%;height:500px">
    </div>
    <div class="col-md-6"></div>
    <h2><b>@Model.BookName</b></h2>
    <h4><b>Author:</b> @Model.Author.AuthorName</h4>
    <h4><b>Category:</b> @Model.Category.CategoryName</h4>
    <h4><b>Publisher:</b> @Model.Publisher.PublisherName</h4>
    <h4><b>Price:</b> <span style="color:red"><ins>$@Model.Price</ins></span></h4>
    <br />
    <a href="@Url.Action("AddtoCart", "Carts", new { id = Model.BookID })" class="btn btn-primary">
        <span class="glyphicon glyphicon-shopping-cart"></span> Add to Cart
    </a>
</div>

<div class="container">
    <div class="col-md-12">
        <h2><b><u>The detail information of book</u></b></h2>
        <h5 style="text-align: justify">
            @Model.Description
        </h5>
    </div>
</div>

