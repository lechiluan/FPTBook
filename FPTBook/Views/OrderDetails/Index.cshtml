@model IEnumerable<FPTBook.Models.OrderDetail>

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <h2 align="center"><b>OrderDetails Management</b></h2>
            <br />
            <hr />
        </div>
        <table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.OrderID)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Book.BookName)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Price)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Subtotal)</th>
                    <th style="text-align: center;">Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.OrderID)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Book.BookName)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Price)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Subtotal)</td>

                        <td style="text-align: center;">
                            <div>@Html.ActionLink(" ", "Details", new { id = item.OrderID }, new { @class = "glyphicon glyphicon-info-sign", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
