@model IEnumerable<FPTBook.Models.Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <style>
        .img-index {
            width: 80px;
            height: 100px;
        }
    </style>
</head>
<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <h2 align="center"><b>Book Management</b></h2>
            <br />
            <div align="center">
                @Html.ActionLink("Add New Book", "Add", null, new { @class = "btn btn-primary" })
                <hr />
            </div>
        </div>
        <table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.BookID)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.BookName)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Image)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Category.CategoryName)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Author.AuthorName)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Publisher.PublisherName)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Price)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th style="text-align: center;">Detail</th>
                    <th style="text-align: center;">Update</th>
                    <th style="text-align: center;">Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.BookID)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.BookName)</td>
                        <td style="text-align: center;color: rgb(0,0,0);font-weight: bold;">
                            <div>
                                <img src="~/Image/@item.Image" loading="eager" class="img-index" />
                            </div>
                        </td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Category.CategoryName)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Author.AuthorName)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Publisher.PublisherName)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Price)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Quantity)</td>
                        <td style="text-align: center;">
                            <div>@Html.ActionLink(" ", "Details", new { id = item.BookID }, new { @class = "glyphicon glyphicon-info-sign", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                        </td>
                        <td style="text-align: center;">
                            <div>@Html.ActionLink(" ", "Update", new { id = item.BookID }, new { @class = "glyphicon glyphicon-edit", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                        </td>
                        <td style="text-align: center;">
                            <div>@Html.ActionLink(" ", "Delete", new { id = item.BookID }, new { @class = "glyphicon glyphicon-remove", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
