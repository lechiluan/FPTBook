@model FPTBook.Models.Author

@{
    ViewBag.Title = "Author Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 align="center"><b>Author Details</b></h2>
<ul class="list-group" style="margin-left: 5%;margin-right: 5%;border-radius: 23px;">
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;">@Html.DisplayNameFor(model => model.AuthorID)</label>
        </div>
        <span style="font-size: 19px;">@Html.DisplayFor(model => model.AuthorID)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;">@Html.DisplayNameFor(model => model.AuthorName)</label>
        </div>
        <span style="font-size: 19px;">@Html.DisplayFor(model => model.AuthorName)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;">@Html.DisplayNameFor(model => model.Description)</label>
        </div>
        <span style="font-size: 19px;">@Html.DisplayFor(model => model.Description)</span>
    </li>

    <li class="list-group-item">
        <div>
            @Html.ActionLink("Update", "Update", new { id = Model.AuthorID }, new { @class = "btn btn-primary" })
            <a class="btn btn-primary" role="button" href="@Url.Action("Index", "Authors")">Cancel</a>
        </div>
    </li>
</ul>