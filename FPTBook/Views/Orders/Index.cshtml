@model IEnumerable<FPTBook.Models.Order>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header py-3">
            <h2 align="center"><b>Order Management</b></h2>
            <br />
            <hr />
        </div>
        <table id="tablecategory" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.OrderID)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Username)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Telephone)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Fullname)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.DeliveyAddress)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.OrderDate)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.TotalPrice)</th>
                    <th style="text-align: center;">@Html.DisplayNameFor(model => model.Payment.PaymentName)</th>
                    <th style="text-align: center;">Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.OrderID)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Username)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Telephone)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Fullname)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.DeliveyAddress)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.OrderDate)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.TotalPrice)</td>
                        <td style="text-align: center;">@Html.DisplayFor(modelItem => item.Payment.PaymentName)</td>

                        <td style="text-align: center;">
                            <div>@Html.ActionLink(" ", "Details", new { id = item.OrderID }, new { @class = "glyphicon glyphicon-info-sign", @style = "font-size: 20px;color: rgb(1,1,1);" })</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>