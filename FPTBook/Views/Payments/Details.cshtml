@model FPTBook.Models.Payment

@{
    ViewBag.Title = "Payment Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 align="center"><b>Payment Details</b></h2>
<ul class="list-group" style="margin-left: 5%;margin-right: 5%;border-radius: 23px;">
    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;">@Html.DisplayNameFor(model => model.PaymentID)</label>
        </div>
        <span style="font-size: 19px;">@Html.DisplayFor(model => model.PaymentID)</span>
    </li>

    <li class="list-group-item">
        <div>
            <label class="form-label" style="font-weight: bold;">@Html.DisplayNameFor(model => model.PaymentName)</label>
        </div>
        <span style="font-size: 19px;">@Html.DisplayFor(model => model.PaymentName)</span>
    </li>

    <li class="list-group-item">
        <div>
            @Html.ActionLink("Update", "Update", new { id = Model.PaymentID }, new { @class = "btn btn-primary" })
            <a class="btn btn-primary" role="button" href="@Url.Action("Index", "Payments")">Cancel</a>
        </div>
    </li>
</ul>